<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    tools:context=".view.formlogin.LoginActivity"
    tools:ignore="ExtraText">

    <View
        android:id="@+id/pink_backgroud"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/rosa"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/white_backgroud"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
w
    <TextView
        android:id="@+id/txt_LogIn"
        android:text="@string/LogIn"
        android:textSize="50sp"
        android:fontFamily="sans-serif"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/pink_backgroud"
        app:layout_constraintBottom_toBottomOf="@id/pink_backgroud"
        app:layout_constraintStart_toStartOf="@id/pink_backgroud"
        app:layout_constraintEnd_toEndOf="@id/pink_backgroud"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/txt_subtitulo"
        android:text="@string/subtitulo_login"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/txt_LogIn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="VisualLintOverlap" />

    <EditText
        android:id="@+id/edit_username"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:background="@color/inputs"
        android:hint="@string/hint_email_user"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:paddingStart="10dp"
        android:shadowColor="@color/black"
        android:maxLines="1"
        android:inputType="textAutoCorrect"
        app:layout_constraintBottom_toTopOf="@id/white_backgroud"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pink_backgroud"
        app:layout_constraintVertical_bias="0.5"
        tools:ignore="RtlSymmetry,VisualLintBounds,VisualLintTextFieldSize"
        android:elevation="8dp"
        style="@style/Widget.AppCompat.EditText"
        android:autofillHints="" />

    <ImageButton
        android:id="@+id/profille_icon"
        android:background="@color/inputs"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="10dp"
        android:elevation="9dp"
        android:src="@drawable/baseline_account_circle_24"
        app:layout_constraintTop_toTopOf="@id/edit_username"
        app:layout_constraintEnd_toEndOf="@id/edit_username"
        app:layout_constraintBottom_toBottomOf="@id/edit_username" />

    <EditText
        android:id="@+id/edit_password"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:background="@color/inputs"
        android:hint="@string/hint_password"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:paddingStart="10dp"
        android:inputType="textPassword"
        android:shadowColor="@color/black"
        android:elevation="8dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/edit_username"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="RtlSymmetry" />

    <ImageButton
        android:id="@+id/togglePassword"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@color/inputs"
        android:padding="10dp"
        android:elevation="9dp"
        android:src="@drawable/baseline_remove_red_eye_24"
        app:layout_constraintBottom_toBottomOf="@id/edit_password"
        app:layout_constraintEnd_toEndOf="@id/edit_password"
        app:layout_constraintTop_toTopOf="@id/edit_password" />

    <View
        android:id="@+id/white_backgroud"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pink_backgroud" />

    <Button
        android:id="@+id/btn_singup"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/rosa"
        android:shadowColor="@color/black"
        android:text="@string/sing_up"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/edit_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/img_arrow"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:paddingRight="30dp"
        android:background="@color/transparent"
        android:src="@drawable/baseline_east_24"
        app:layout_constraintTop_toTopOf="@id/btn_singup"
        app:layout_constraintBottom_toBottomOf="@id/btn_singup"
        app:layout_constraintEnd_toEndOf="@id/btn_singup"/>

    <TextView
        android:id="@+id/txt_recuperarSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/esqueceu_sua_senha"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/btn_singup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.3"/>

    <TextView
        android:id="@+id/txt_recuperarSenhaLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/recuperar_senha"
        android:textColor="@color/rosaLink"
        android:textStyle="bold"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/txt_recuperarSenha"
        app:layout_constraintTop_toTopOf="@id/txt_recuperarSenha"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"/>

    <TextView
        android:id="@+id/txt_semCadastro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sem_cadastro"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/txt_recuperarSenha"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"/>

    <TextView
        android:id="@+id/txt_semCadastroLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_cadastrar"
        android:textColor="@color/rosaLink"
        android:textSize="15sp"
        android:textStyle="bold"
        android:paddingLeft="5dp"
        app:layout_constraintStart_toEndOf="@id/txt_semCadastro"
        app:layout_constraintTop_toTopOf="@id/txt_semCadastro" />

</androidx.constraintlayout.widget.ConstraintLayout>
