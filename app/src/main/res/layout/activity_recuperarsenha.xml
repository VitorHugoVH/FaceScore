<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/pink_backgroud"
        android:layout_width="wrap_content"
        android:layout_height="540dp"
        android:background="@color/rosa"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/img_return"
        android:layout_width="41dp"
        android:layout_height="50dp"
        android:src="@drawable/baseline_arrow_back_24"
        app:layout_constraintTop_toTopOf="@id/pink_backgroud"
        app:layout_constraintStart_toStartOf="@id/pink_backgroud"/>

    <TextView
        android:id="@+id/txt_forgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forgot_password"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="40sp"
        app:layout_constraintTop_toTopOf="@id/pink_backgroud"
        app:layout_constraintStart_toStartOf="@id/pink_backgroud"
        app:layout_constraintEnd_toEndOf="@id/pink_backgroud"
        app:layout_constraintBottom_toBottomOf="@id/pink_backgroud"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/subtitulo_recuperar_senha"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/txt_forgotPassword"
        app:layout_constraintStart_toStartOf="@id/txt_forgotPassword"
        app:layout_constraintEnd_toEndOf="@id/txt_forgotPassword"/>

    <View
        android:id="@+id/white_backgroud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/pink_backgroud"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/input_email"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:background="@color/inputs"
        android:shadowColor="@color/black"
        android:hint="@string/hint_email"
        android:textSize="20sp"
        android:inputType="textEmailAddress"
        android:paddingStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/pink_backgroud"
        app:layout_constraintBottom_toTopOf="@id/white_backgroud"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="10dp"/>

    <Button
        android:id="@+id/btn_email"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/rosa"
        android:shadowColor="@color/black"
        android:text="@string/txt_send_code"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/input_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/icon_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_email_24"
        app:layout_constraintTop_toTopOf="@id/btn_email"
        app:layout_constraintEnd_toEndOf="@id/btn_email"
        app:layout_constraintBottom_toBottomOf="@id/btn_email"
        android:paddingEnd="20dp"/>

    <TextView
        android:id="@+id/txt_tryLoginAgain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tentar_fazer_login_novamente"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/btn_email"
        app:layout_constraintEnd_toEndOf="@id/btn_email"
        app:layout_constraintStart_toStartOf="@id/btn_email"
        app:layout_constraintHorizontal_bias="0.4"/>

    <TextView
        android:id="@+id/txt_LogIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log In"
        android:textColor="@color/rosaLink"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/txt_tryLoginAgain"
        app:layout_constraintStart_toEndOf="@id/txt_tryLoginAgain"
        app:layout_constraintBottom_toBottomOf="@id/txt_tryLoginAgain"
        android:paddingLeft="5dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>