<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.home.HomeActivity">

    <View
        android:id="@+id/pink_backgroud"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/rosa" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:src="@drawable/logo"
        android:elevation="9sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/option_ranking"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/option_ranking"
        android:layout_width="206sp"
        android:layout_height="197sp"
        android:layout_marginTop="140dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/btn_ranking"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:background="@color/transparent"
        android:src="@drawable/baseline_equalizer_24"
        app:layout_constraintTop_toTopOf="@id/option_ranking"
        app:layout_constraintBottom_toBottomOf="@id/option_ranking"
        app:layout_constraintStart_toStartOf="@id/option_ranking"
        app:layout_constraintEnd_toEndOf="@id/option_ranking"/>

    <View
        android:id="@+id/option_profile"
        android:layout_width="206sp"
        android:layout_height="197sp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="@id/option_ranking"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/option_ranking"
        app:layout_constraintStart_toEndOf="@id/option_ranking"/>

    <ImageButton
        android:id="@+id/btn_profile"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:background="@color/transparent"
        android:src="@drawable/person_profile"
        app:layout_constraintBottom_toBottomOf="@id/option_profile"
        app:layout_constraintEnd_toEndOf="@id/option_profile"
        app:layout_constraintStart_toStartOf="@id/option_profile"
        app:layout_constraintTop_toTopOf="@id/option_profile" />

    <View
        android:id="@+id/option_grupo"
        android:layout_width="206sp"
        android:layout_height="197sp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/option_ranking"
        app:layout_constraintStart_toStartOf="@id/option_ranking"
        app:layout_constraintEnd_toEndOf="@id/option_ranking"/>

    <ImageButton
        android:id="@+id/btn_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:src="@drawable/baseline_groups_24"
        app:layout_constraintTop_toTopOf="@id/option_grupo"
        app:layout_constraintStart_toStartOf="@id/option_grupo"
        app:layout_constraintBottom_toBottomOf="@id/option_grupo"
        app:layout_constraintEnd_toEndOf="@id/option_grupo"/>

    <View
        android:id="@+id/option_scanface"
        android:layout_width="206sp"
        android:layout_height="197sp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/option_profile"
        app:layout_constraintStart_toStartOf="@id/option_profile"
        app:layout_constraintBottom_toBottomOf="@id/option_grupo"
        app:layout_constraintEnd_toEndOf="@id/option_profile"/>

    <ImageButton
        android:id="@+id/btn_scanface"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:src="@drawable/baseline_face_retouching_natural_24"
        app:layout_constraintTop_toBottomOf="@id/option_profile"
        app:layout_constraintStart_toStartOf="@id/option_scanface"
        app:layout_constraintBottom_toBottomOf="@id/option_scanface"
        app:layout_constraintEnd_toEndOf="@id/option_scanface"/>

    <View
        android:id="@+id/option_config"
        android:layout_width="209sp"
        android:layout_height="197sp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/option_grupo"
        app:layout_constraintStart_toStartOf="@id/option_grupo"
        app:layout_constraintBottom_toBottomOf="@id/option_logout"/>

    <ImageButton
        android:id="@+id/btn_config"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:src="@drawable/baseline_settings_24"
        app:layout_constraintTop_toTopOf="@id/option_config"
        app:layout_constraintBottom_toBottomOf="@id/option_config"
        app:layout_constraintStart_toStartOf="@id/option_config"
        app:layout_constraintEnd_toEndOf="@id/option_config"/>

    <View
        android:id="@+id/option_logout"
        android:layout_width="206sp"
        android:layout_height="197sp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/option_scanface"
        app:layout_constraintStart_toStartOf="@id/option_scanface"
        app:layout_constraintEnd_toEndOf="@id/option_scanface"/>

    <ImageButton
        android:id="@+id/btn_leave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:src="@drawable/baseline_exit_to_app_24"
        app:layout_constraintTop_toTopOf="@id/option_logout"
        app:layout_constraintBottom_toBottomOf="@id/option_logout"
        app:layout_constraintStart_toStartOf="@id/option_logout"
        app:layout_constraintEnd_toEndOf="@id/option_logout"/>

</androidx.constraintlayout.widget.ConstraintLayout>